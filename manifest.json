{
  "manifest_version": 2,

  "name": "Weather App Extension",
  "description": "This extension will display the current weather at your location.",
  "version": "1.0",
  "icons": { "16": "icon16.png",
             "48": "icon48.png",
             "128": "icon128.png" },

  "browser_action": {
   "default_icon": "icon16.png",
   "default_popup": "popup.html"
  },
  "permissions": [
   "geolocation"
   ]
}